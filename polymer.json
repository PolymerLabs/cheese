{
  "entrypoint": "index.html",
  "shell": "src/snap-app.html",
  "fragments": [
    "src/lazy-imports.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "stickers/**/*",
    "index.html"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*"
  ],
  "builds": [
    {
      "name": "bundled",
      "bundle": true,
      "html": {
        "minify": true
      },
      "css": {
        "minify": true
      },
      "js": {
        "minify": true
      },
      "addServiceWorker": true
    },
    {
      "name": "unbundled",
      "html": {
        "minify": true
      },
      "css": {
        "minify": true
      },
      "js": {
        "minify": true
      },
      "addServiceWorker": true,
      "addPushManifest": true
    }
  ],
  "lint": {
    "rules": ["polymer-2-hybrid"]
  }
}
